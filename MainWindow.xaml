<Window x:Class="TripleTea.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TripleTea"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="ClockText" FontSize="15" Text="Loading..." 
                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,35,0,0"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" 
                   Text="Current Time:" VerticalAlignment="Top" FontSize="15" FontWeight="Bold"/>
        
        <Button Name="StartEndBtn" Content="Start" HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top" Height="70" Width="185" Click="StartEndBtn_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="50,250,0,0" VerticalAlignment="Top" Height="70" Width="185"/>
        <Button x:Name="PauseBtn" Content="Button" HorizontalAlignment="Right" Margin="0,250,50,0" VerticalAlignment="Top" Height="70" Width="185" Click="PauseBtn_Click"/>
        
        <TextBlock Name="TimePassedText" HorizontalAlignment="Center" Margin="0,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="30"/>

    </Grid>
</Window>
